<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.mfzj.parttimer.view.activity.setting.SettingActivity">

    <include layout="@layout/view_main_titlebar_layout"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/item_color"
        />

    <com.mfzj.parttimer.widget.ItemView
        android:id="@+id/setting_itemview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isShowLeftIcon="false"
        android:visibility="gone"
        app:isShowLine="false"
        app:setText="@string/setting_item1_name"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/item_color"
        />
    <com.mfzj.parttimer.widget.ItemView
        android:id="@+id/setting_itemview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isShowLeftIcon="false"
        app:isShowLine="false"
        app:setText="@string/setting_item2_name"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/item_color"
        />

    <com.mfzj.parttimer.widget.ItemView
        android:id="@+id/setting_itemview3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isShowLeftIcon="false"
        app:isShowLine="false"
        app:setText="@string/setting_item3_name"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/item_color"
        />
    <com.mfzj.parttimer.widget.ItemView
        android:id="@+id/setting_itemview4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isShowLeftIcon="false"
        app:isShowLine="false"
        app:setText="@string/setting_item4_name"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/item_color"
        />

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="退出登录"
        android:visibility="gone"
        android:textColor="@color/white"
        android:background="@drawable/selector_exit_bg"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="16sp"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/copyright_date"
                android:textColor="@color/gray"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/copyright_name"
                android:textColor="@color/gray"
                android:textSize="11sp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
