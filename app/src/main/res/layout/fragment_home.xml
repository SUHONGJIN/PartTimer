<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/white"
        android:paddingLeft="10dp">
        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定位..."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:drawableLeft="@mipmap/ic_item1"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginRight="10dp"
            android:hint="搜索兼职"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_serach"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ddd"/>

            <com.youth.banner.Banner
                android:id="@+id/mBanner"
                android:layout_width="match_parent"
                android:layout_height="180dp">
            </com.youth.banner.Banner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="10dp">

                <com.mfzj.parttimer.widget.ItemMenu
                    android:id="@+id/itemmenu_item1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:setMenuIcon="@mipmap/ic_item1"
                    app:setMenuText="@string/my_menu1_name" />

                <com.mfzj.parttimer.widget.ItemMenu
                    android:id="@+id/itemmenu_item2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:setMenuIcon="@mipmap/ic_item2"
                    app:setMenuText="@string/my_menu2_name" />

                <com.mfzj.parttimer.widget.ItemMenu
                    android:id="@+id/itemmenu_item3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:setMenuIcon="@mipmap/ic_item3"
                    app:setMenuText="@string/my_menu3_name" />

                <com.mfzj.parttimer.widget.ItemMenu
                    android:id="@+id/itemmenu_item4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    app:setMenuIcon="@mipmap/ic_item4"
                    app:setMenuText="@string/my_menu4_name" />

            </LinearLayout>

            <include layout="@layout/item_list_day"/>
            <include layout="@layout/item_list_day"/>
            <include layout="@layout/item_list_day"/>
            <include layout="@layout/item_list_day"/>
            <include layout="@layout/item_list_day"/>
            <include layout="@layout/item_list_day"/>
            <include layout="@layout/item_list_day"/>
            <include layout="@layout/item_list_day"/>
            <include layout="@layout/item_list_day"/>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>



</LinearLayout>