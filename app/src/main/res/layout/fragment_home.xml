<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/colorAccent"
        android:paddingLeft="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广州"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:hint="搜索兼职"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_serach"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ddd"/>

    <com.youth.banner.Banner
        android:id="@+id/mBanner"
        android:layout_width="match_parent"
        android:layout_height="160dp">
    </com.youth.banner.Banner>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <com.bee.parttimer.widget.ItemMenu
            android:id="@+id/itemmenu_item1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            app:setMenuIcon="@mipmap/ic_message_d"
            app:setMenuText="@string/my_menu1_name" />

        <com.bee.parttimer.widget.ItemMenu
            android:id="@+id/itemmenu_item2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            app:setMenuIcon="@mipmap/ic_home_d"
            app:setMenuText="@string/my_menu2_name" />

        <com.bee.parttimer.widget.ItemMenu
            android:id="@+id/itemmenu_item3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            app:setMenuIcon="@mipmap/ic_post_d"
            app:setMenuText="@string/my_menu3_name" />

        <com.bee.parttimer.widget.ItemMenu
            android:id="@+id/itemmenu_item4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            app:setMenuIcon="@mipmap/ic_home_d"
            app:setMenuText="@string/my_menu4_name" />

    </LinearLayout>




</LinearLayout>