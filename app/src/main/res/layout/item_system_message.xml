<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="6dp"
        android:padding="10dp"
        android:background="@drawable/selector_itemview_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:text="系统通知"/>
            <TextView
                android:id="@+id/tv_system_message_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_alignParentRight="true"
                android:text="2019-04-29"/>

        </RelativeLayout>

        <include layout="@layout/item_line_layout"/>

        <TextView
            android:id="@+id/tv_system_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_about_text"
            android:textSize="16sp"
            android:padding="4dp"
            android:lineHeight="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/somber"/>

    </LinearLayout>

</LinearLayout>
